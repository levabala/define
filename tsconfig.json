{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,

        /* React Config */
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist"
    },
    "include": ["node_modules/vite/client.d.ts", "src/**/*"],
    "exclude": ["node_modules", "src/client/dev-dist"]
}
